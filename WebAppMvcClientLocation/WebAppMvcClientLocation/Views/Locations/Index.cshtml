@model IEnumerable<Location>

<h1>Locations</h1>
<a asp-controller="Locations" asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">LocationId</th>
            <th scope="col">LocationId</th>
            <th scope="col">ClientName</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Location location in Model)
        {
            <tr>
                <td>@location.LocationId</td>
                <td>@location.PostCode</td>
                <td>@location.City</td>
                <td>
                    <a asp-controller="Locations" asp-action="Edit">Edit</a> |
                    <a asp-controller="Locations" asp-action="Details">Details</a> |
                    <a asp-controller="Locations" asp-action="Delete">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>